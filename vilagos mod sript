      /*  vilagos modhoz Pfingstl Josef munk√°ja*/
      
      var icon=document.getElementById("icon");
      icon.onclick=function(){
document.body.classList.toggle("vilagosmod");
if(document.body.classList.contains("vilagosmod")){
  icon.src="sun.png";

      }
      else {
        icon.src="moon.png";
      }
    }
      
